<!doctypehtml>
<html>
    <head>
        <meta charset="UTF-8">
        <link type="style/css" rel="stylesheet" href="/views/style.css">
        <title>
            Form    
        </title>
    </head>
    <body>
        <div id="header">
                <span id="headerLogo"><img src="/public/images/uotlogo.png" id="logo" alt="uotlogo"></span>
                <span id="headerText"> Information of Students of University of Tabriz </span>
        </div>
        <br>
        <div id="formDiv">
            <form action="" method="POST">
                <fieldset>
                        <legend>Personal Information</legend>
                        <div class="fieldPar" id="nameDiv">
                            First Name : <input type="text" class="fieldInput" name="nameField">
                        </div>
                        <div class="fieldPar" id="familyDiv">
                            Family Name : <input type="text" class="fieldInput" name="familyField">
                        </div>
                        <div class="fieldPar" id="genderDiv"> Gender :
                            Male <input type="radio" value="gdrMale" class="fieldInput" name="male">
                            Female <input type="radio" value="gdrFemale" class="fieldInput" name="female">
                        </div>
                        <div class="fieldPar" id="natIdDiv">
                            National ID : <input type="number" class="fieldInput" name="natIdField">
                        </div>
                        <div class="fieldPar" id="birthDiv">
                            Birth Date : <input type="date" class="fieldInput" name="birthDateField">
                        </div>        
                </fieldset>
                <br>
                <fieldset>
                    <legend>Educational Information</legend>

                    <div class="fieldPar">
                        Field Of Study : <input type="text" class="fieldInput" name="studyField">
                    </div>
                    <div class="fieldPar">
                        Year of Entering University <input type="number" class="fieldInput" name="enterYearField">
                    </div>
            <!--    
                <p class="fieldPar"> Passed Degrees : 
                    Bachelor<input type="checkbox" value="degBach" class="fieldInput" name="degBachField">
                    Master<input type="checkbox" value="degMast" class="fieldInput" name="degMastField">
                    Ph.D<input type="checkbox" value="degPhd" class="fieldInput" name="degPhdField">
                </p>
            -->
                </fieldset>
                
            </form>    
        </div>
        </div>        
    </body>
</html>